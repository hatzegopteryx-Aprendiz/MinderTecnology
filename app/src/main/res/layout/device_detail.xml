<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7CCC8">

    <!-- ScrollView para permitir scroll si el contenido es largo -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttons_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card principal de la hoja de vida -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/device_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:text="Hoja de Vida del Dispositivo"
                    android:textColor="#5D4037"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Línea divisoria -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="24dp"
                    android:background="#E0E0E0" />

                <!-- Nombre del Equipo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:tint="#6D4C41"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del Equipo"
                            android:textColor="#8D6E63"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvNombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin nombre"
                            android:textColor="#5D4037"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Marca -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:tint="#6D4C41"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marca"
                            android:textColor="#8D6E63"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvMarca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin marca"
                            android:textColor="#5D4037"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Descripción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="top">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_view"
                        android:tint="#6D4C41"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descripción"
                            android:textColor="#8D6E63"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDescripcion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin descripción"
                            android:textColor="#5D4037"
                            android:textSize="16sp"
                            android:maxLines="10"
                            android:scrollbars="vertical" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Última Revisión -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_today"
                        android:tint="#6D4C41"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Última Revisión"
                            android:textColor="#8D6E63"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvUltimaRevision"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin fecha"
                            android:textColor="#5D4037"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Último Técnico -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="#6D4C41"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Último Técnico"
                            android:textColor="#8D6E63"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvUltimoTecnico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin información"
                            android:textColor="#5D4037"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Fecha de Registro -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="#6D4C41"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de Registro"
                            android:textColor="#8D6E63"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvFechaRegistro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin fecha"
                            android:textColor="#5D4037"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Última Intervención -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:tint="#6D4C41"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Última Intervención"
                            android:textColor="#8D6E63"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvUltimaIntervencionFecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sin fecha"
                            android:textColor="#5D4037"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Línea divisoria -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="#E0E0E0" />

                <!-- Historial de Tareas Completadas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historial de Tareas Completadas"
                    android:textColor="#5D4037"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <ListView
                    android:id="@+id/listCompletedTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:maxHeight="300dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="8dp"
                    android:background="@android:color/transparent" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.core.widget.NestedScrollView>

    <!-- Botones inferiores -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Botón Intervenir -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIntervenir"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Intervenir"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="28dp"
            app:elevation="4dp" />

        <!-- Botón Volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="#6D4C41"
            app:cornerRadius="28dp"
            app:elevation="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

